{
  "info": {
    "name": "QuoteGenerator API",
    "description": "Collection for testing the QuoteGenerator Spring Boot REST API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Random Quote from API",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/quotes/random",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quotes", "random"]
        },
        "description": "Fetches a random quote from ZenQuotes.io API (does not save to database)"
      }
    },
    {
      "name": "Get All Quotes",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/quotes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quotes"]
        },
        "description": "Retrieves all quotes stored in the local database"
      }
    },
    {
      "name": "Get Quote by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/quotes/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quotes", "1"]
        },
        "description": "Retrieves a specific quote by ID"
      }
    },
    {
      "name": "Save New Quote",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Be yourself; everyone else is already taken.\",\n  \"author\": \"Oscar Wilde\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/quotes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quotes"]
        },
        "description": "Saves a new quote to the database"
      }
    },
    {
      "name": "Fetch and Save Random Quote",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/quotes/random/save",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quotes", "random", "save"]
        },
        "description": "Fetches a random quote from API and saves it to database"
      }
    },
    {
      "name": "Delete Quote",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/quotes/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quotes", "1"]
        },
        "description": "Deletes a quote by ID"
      }
    }
  ]
}

